<div class="title-logo"><h3 class="title">配送先登録・一覧</h3></div>

<%= form_with model: @address,url: addresses_path,method: :post, local: true do |f| %>
  <div>
    <%= f.label :'郵便番号(ハイフンなし)' %>
    <%= f.text_field :postal_code %>
  </div>
  <div>
    <%= f.label :'住所' %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :'宛名' %>
    <%= f.text_field :name %>
  </div>
  <%= f.submit '新規登録' %>
<% end %>


<table>
  <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
  </tr>
  <tr>
    <th><%= current_customer.postal_code %></th>
    <th><%= current_customer.address %></th>
    <th><%#= current_customer.(last_name + first_name) %> </th>
    <th><%#= link_to "編集する", , class: "btn btn-success btn-sm" %></th>
    <th><%#= link_to "削除する", ,method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger btn-sm" %></th>
  </tr>
  <% @addresses.each do |address| %>
  <tr>
    <td><%= address.postal_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-success btn-sm" %></td>
    <td><%= button_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger btn-sm" %></td>
  </tr>
  <% end %>
</table>
