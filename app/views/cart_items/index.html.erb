<h2>ショッピングカート</h2>
<table>
  <thead>
    <tr class = "information">
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @total = 0 %>
    <% @cart_items.each do |cart_item| %>
      <tr class = "body">
        <td>
          <%#= cart_item.item.image %>
          <%= cart_item.item.name %>
        </td>
        <td><%= (cart_item.item.price * 1.1).floor %></td>
        <td>
          <%= form_with model:cart_item, url:cart_item_path(cart_item), method: :patch,local:true do |f| %>
            <%= f.select :quantity, *[1..10] %>
            <%= f.submit '変更' %>
          <% end %>
        </td>
        <td><%= (cart_item.item.price * 1.1).floor * cart_item.quantity %></td>
        <% @total +=  (cart_item.item.price * 1.1).floor * cart_item.quantity %>
        <td><%= link_to "削除する",cart_item_path(cart_item.item_id), method: :delete,local:true, "data-confirm" => "削除しますか？" %><td>
      </tr>
    <% end %>
  </tbody>
</table>
<h1>合計金額:<%= @total %></h1>


