<div class="title-logo"><h3 class="title">注文履歴11(管理者側)</h3></div>
<table>
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to order.created_at, order_path(order.id) %></td>
        <td><%= order.name %></td>
        <% total = 0 %>
        <% order.order_details.each do |order_detail| %>
        <% total = total + order_detail.quantity %>
        <% end %>
        <td><%= total %></td>
        <td><%#= order.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>