<div class="title-logo"><h3 class="title">注文情報入力</h3></div>


<%= form_with model:@order,url:orders_path,method: :post,local: true do |f| %>
<div class="order">
  <div>
    <h5 class="order-title">支払い方法</h5>
      <%= f.radio_button :payment_method, "credit_card" %>
      <%= f.label :payment_method, "クレジットカード" %>

      <%= f.radio_button :payment_method, "transfer" %>
      <%= f.label :payment_method, "銀行振込" %>
  </div>

      <div class="order-address">
         <h5 class="order-title">お届け先</h5>
            <div class="order2">
              <div>
                  <%= f.radio_button :address,current_customer.address %>
        　　        <strong><%= f.label :address,"ご自身の住所" %></strong><br>
                  〒 <%= current_customer.postal_code %><%= current_customer.address %><br>
                  <%= current_customer.last_name %><%= current_customer.first_name %>
              </div>

              <div class="order-address1">
                 <%= f.radio_button :address,current_customer.addresses %>
                 <strong><%= f.label :'登録済住所から選択' %></strong><br>
                 <%= f.select :address, options_from_collection_for_select(Address.all, :id, :address_display) %>
              </div>

              <div>
                <%= f.radio_button :address, "address_id" %>
                <strong><%= f.label :address, "新しいお届け先" %></strong>
                <div class="change-address">
                  <p><%= f.label :'郵便番号(ハイフンなし)' %><%= f.text_field :postal_code %></p>
                  <p><%= f.label :'住所' %><%= f.text_field :address %></p>
                  <p><%= f.label :'宛名' %><%= f.text_field :name %></p>
                </div>
                </div>
            </div>
       </div>
       <div class="order-button">
         <%= f.submit '確認画面へ進む', class: "btn btn-outline-dark" %>
       </div>
</div>
  <% end %>