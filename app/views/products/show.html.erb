

<h1>商品詳細</h1>
  <tr>
    <td>商品名</td>
    <td><%= @item.name %></td>

    <td>商品説明</td>
    <td><%= @item.introduction %></td>

    <td>税抜価格</td>
    <td><%= @item.price %></td>

  </tr>
  <%= form_with model:@cart_item, url:cart_items_path, method: :post,local:true do |f| %>
    <%#= f.hidden_field :customer_id,current_customer.id %>
    <%= f.select :amount, *[1..100] %>
    <%= f.submit 'カートに入れる' %>
  <% end %>