<div class="container">
  <div class="customer-logo4"><h3 class="title">新規会員登録</h3></div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
   <div class="row">
     <div class="col-lg-3">
        <p><%= f.label :'名前' %></p>
        <p><%= f.label :'フリガナ' %></p>
        <p><%= f.label :'メールアドレス' %></p>
        <p><%= f.label :'郵便番号(ハイフンなし)' %></p>
        <p><%= f.label :'住所' %></p>
        <p><%= f.label :'電話番号(ハイフンなし)' %></p>
        <p><%= f.label :'パスワード(6文字以上)' %></p>
        <p><%= f.label :'パスワード確認用' %></p>
     </div>

     <div class="col-lg-1">
       <p>(姓)</p>
       <p>(セイ)</p>
     </div>

     <div class="col-lg-4">
        <p><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %></p>
        <p><%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %></p>
        <p><%= f.email_field :email, autocomplete: "email" %></p>
        <p><%= f.text_field :postal_code, autocomplete: "postal_code" %></p>
        <p><%= f.text_field :address, autocomplete: "address" %></p>
        <p><%= f.text_field :telephone_number, autocomplete: "telephone_number" %></p>
        <p><%= f.password_field :password, autocomplete: "new-password" %></p>
        <p><%= f.password_field :password_confirmation, autocomplete: "new-password" %></p>
     </div>

     <div class="col-lg-1">
       <p>(名)</p>
       <p>(メイ)</p>
     </div>

     <div class="col-lg-3">
        <p><%= f.text_field :first_name,  autocomplete: "first_name" %></p>
        <p><%= f.text_field :first_name_kana,  autocomplete: "first_name_kana" %></p>
        <p class="title-button"><%= f.submit "新規登録", class: "btn btn-outline-dark" %></p>
     </div>
   </div>
   <% end %>

    <h5 class="title title-new">登録済の方</h5><%= render "public/shared/links" %>からログインしてください
   </div>
</div>

