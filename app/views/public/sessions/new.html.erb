<div>
    <div class="title-logo"><h3 class="title">ログイン</h3></div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="customer-login">
      <p class="customer-logo1">会員の方はこちら</p>
      <table>
        <tr>
          <td class="customer-label"><%= f.label :'メールアドレス' %></td>
          <td class="customer-field"><%= f.email_field :email, placeholder: "sample@sample.com", autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td class="customer-label"><%= f.label :'パスワード' %>
          <td class="customer-field"><%= f.password_field :password, placeholder: "パスワード入力",autocomplete: "current-password" %></td>
          <td class="customer-label"><%= f.submit "ログイン", class: "btn btn-outline-dark" %></td>
        </tr>
      </table>

      <div class="customer-logo0">
        <p class="customer-logo1">会員登録がお済でない方</p>
        <p class="customer-logo2"><%= render "public/shared/links" %>から新規登録を行ってください。</p>
      </div>

    </div>
   <% end %>
</div>





